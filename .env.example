# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs
# Create products in Stripe Dashboard > Products
VITE_STRIPE_PRICE_MONTHLY=price_xxxxxxxxxxxxxxxxxxxx
VITE_STRIPE_PRICE_ANNUAL=price_xxxxxxxxxxxxxxxxxxxx

# OpenAI Configuration
# Get this from OpenAI Platform > API Keys
VITE_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# Application Configuration
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=AI Mock Interview Platform

# Backend API URL (Firebase Functions)
VITE_API_URL=http://localhost:5001/your-project/us-central1

# Environment
NODE_ENV=development

# Optional: Analytics
VITE_ENABLE_ANALYTICS=true

# Optional: Feature Flags
VITE_ENABLE_TRIAL=true
VITE_TRIAL_SESSIONS=3
